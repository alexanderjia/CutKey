<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/processtext"
    tools:context="com.example.zhangjia.cutkey.function.JawActivity">
    <RelativeLayout
        android:id="@+id/rl_notice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请将夹具安装好"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_notice"
        android:background="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="40dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:src="@drawable/align"
               android:layout_marginLeft="20dp"
               android:scaleType="fitXY"
               android:layout_gravity="center_vertical"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="96dp"
               android:orientation="vertical"
               android:layout_marginLeft="20dp"
               android:layout_gravity="center_vertical">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="夹具名称:"
                       android:textColor="@color/list_text"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/tv_jaw"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:textColor="@color/biaoti"
                       android:text="M1"
                       android:layout_marginLeft="20dp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="说明:"
                       android:textColor="@color/list_text"
                       android:textSize="18sp"
                       />
                   <TextView
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:textColor="@color/biaoti"
                       android:text="kdjsaiofe aijf sjflaji0e0a galska; jfsdjf sl"/>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="确定"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@color/theme"/>
</RelativeLayout>
